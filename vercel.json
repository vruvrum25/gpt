{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    // Обслуживание fp.js из папки static
    {
      "src": "/static/fp.js",
      "dest": "/static/fp.js"
    },
    // Обслуживание fp.js из папки public
    {
      "src": "/fp.js",
      "dest": "/public/fp.js"
    },
    // Прокси для других API путей
    {
      "src": "/metrics/YOUR_AGENT_PATH",
      "dest": "/api/metrics/YOUR_AGENT_PATH.js"
    },
    {
      "src": "/metrics/YOUR_IDENTIFICATION_PATH",
      "dest": "/api/metrics/YOUR_IDENTIFICATION_PATH.js"
    },
    {
      "src": "/metrics/YOUR_IDENTIFICATION_PATH/(.*)",
      "dest": "/api/metrics/YOUR_IDENTIFICATION_PATH/[...randomPathSegments].js"
    },
    // Статический путь для главной страницы
    {
      "src": "/",
      "dest": "/index.html"
    }
  ]
}
